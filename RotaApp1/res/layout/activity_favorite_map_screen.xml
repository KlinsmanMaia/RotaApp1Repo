<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteMapScreen" >

	<fragment
	    android:id="@+id/mapFavorite"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@+id/btFavoriteBack"
	    class="com.google.android.gms.maps.SupportMapFragment" />

     <Button
         android:id="@+id/btFavoriteBack"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:background="@drawable/style_bt_add"
         android:text="@string/favorite_detail_bt_voltar" />

</RelativeLayout>
