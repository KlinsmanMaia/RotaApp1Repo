<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     android:background="@drawable/bgblack2"
    tools:context=".FavoriteManager" >

    <Button
        android:id="@+id/btManagerAddFavorite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_add_favo"
        android:layout_marginTop="106dp"
        android:background="@drawable/style_bt_add"
        android:text="@string/favorite_add_location" />

    <Button
        android:id="@+id/btManagerVisuFavorite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/btManagerAddFavorite"
       	android:drawableLeft="@drawable/ic_visu_favorite"
        android:layout_below="@+id/btManagerAddFavorite"
        android:layout_marginTop="50dp"
        android:background="@drawable/style_bt_add"
        android:text="@string/favorites_visualize" />

    <Button
        android:id="@+id/btManagerRunJson"
        android:background="@drawable/style_bt_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btManagerVisuFavorite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/json_bt_manager_run" />

</RelativeLayout>
